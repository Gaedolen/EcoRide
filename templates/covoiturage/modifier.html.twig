{% extends 'base.html.twig' %}

{% block title %}Modifier le covoiturage{% endblock %}

{% block head %}
    <link rel="stylesheet" href="{{ asset('css/profil/ajoutCovoiturage.css') }}">
{% endblock %}

{% block body %}
<div class="form-container">
    <h1>Modifier le covoiturage</h1>

    {% if reservationsCount > 0 %}
        <div class="alert alert-warning">
            ⚠️ Ce covoiturage a déjà <strong>{{ reservationsCount }}</strong> réservation{% if reservationsCount > 1 %}s{% endif %}.
            Vous ne pouvez pas définir moins de <strong>{{ reservationsCount }}</strong> places.
        </div>
    {% endif %}

    {{ form_start(form) }}
        <div class="form-row">
            <div class="form-group">
                {{ form_label(form.date_depart) }}
                {{ form_widget(form.date_depart, { attr: { class: 'form-input' } }) }}
            </div>

            <div class="form-group">
                {{ form_label(form.heure_depart) }}
                {{ form_widget(form.heure_depart, { attr: { class: 'form-input' } }) }}
            </div>

            <div class="form-group">
                {{ form_label(form.lieu_depart) }}
                {{ form_widget(form.lieu_depart, { attr: { class: 'form-input' } }) }}
            </div>
        </div>

        <div class="form-row">
            <div class="form-group">
                {{ form_label(form.date_arrivee) }}
                {{ form_widget(form.date_arrivee, { attr: { class: 'form-input' } }) }}
            </div>

            <div class="form-group">
                {{ form_label(form.heure_arrivee) }}
                {{ form_widget(form.heure_arrivee, { attr: { class: 'form-input' } }) }}
            </div>

            <div class="form-group">
                {{ form_label(form.lieu_arrivee) }}
                {{ form_widget(form.lieu_arrivee, { attr: { class: 'form-input' } }) }}
            </div>
        </div>

        <div class="form-row">
            <div class="form-group double">
                {{ form_label(form.nb_place) }}
                {{ form_widget(form.nb_place, { attr: { class: 'form-input', min: 1 } }) }}
            </div>

            <div class="form-group double">
                {{ form_label(form.prix_personne) }}
                <div class="input-with-symbol">
                    {{ form_widget(form.prix_personne, { attr: { class: 'form-input', placeholder: 'Entrez un prix' } }) }}
                    <span class="currency-symbol">€</span>
                </div>
            </div>
        </div>

        <div class="form-group">
            {{ form_label(form.voiture) }}
            {{ form_widget(form.voiture, { attr: { class: 'form-input' } }) }}
        </div>

        {{ form_rest(form) }}

        <div class="form-group">
            <button type="submit" class="bouton">Modifier le covoiturage</button>
        </div>

    {{ form_end(form) }}
</div>
{% endblock %}
