{% extends 'base.html.twig' %}

{% block title %}Accueil EcoRide{% endblock %}

{% block head %}
    <link rel="stylesheet" href="{{ asset('/css/accueil.css') }}">
{% endblock %}

{% block body %}

    <!-- Section d'introduction -->
    <section class="hero">
        <div class="hero-content">
            <div class="hero-text">
                <h1>Bienvenue sur <span class="eco-color">EcoRide</span> !</h1>
                <p>
                    Voyagez l’esprit tranquille avec EcoRide !<br>
                    Des trajets <strong>économiques</strong>, <strong>conviviaux</strong> et <strong>écologiques</strong>.
                </p>
                <a href="{{ path('app_covoiturage') }}" class="btn-cta">Trouver un trajet</a>
            </div>
            <div class="hero-img-container">
                <img src="{{ asset('images/img-conviviale.jpeg') }}" alt="Covoiturage convivial">
            </div>
        </div>
    </section>

    <!-- Formulaire de recherche -->
    <section class="search">
        <h2>Choisissez votre itinéraire :</h2>
        <form action="{{ path('app_covoiturage') }}" method="GET">
            <div class="form-fields">
                <input type="text" name="lieu_depart" placeholder="Ville de départ" required>
                <input type="text" name="lieu_arrivee" placeholder="Ville d'arrivée" required>
                <input type="date" name="date_depart" value="{{ app.request.get('date_depart') ?: "now"|date('Y-m-d') }}" min="{{ "now"|date('Y-m-d') }}" required>
                <input type="time" name="heure_depart" value="06:00" required>
            </div>
            <button type="submit" class="btn-submit">Rechercher</button>
        </form>
    </section>

    <!-- Avantages -->
    <section class="advantages">
        <div class="advantage">
            <i class="bi bi-car-front-fill"></i>
            <h3>Covoiturage simplifié</h3>
            <p>Trouvez ou proposez vos trajets facilement en quelques clics.</p>
        </div>
        <div class="advantage">
            <i class="bi bi-leaf-fill"></i>
            <h3>Écologique</h3>
            <p>Réduisez votre empreinte carbone en partageant vos trajets.</p>
        </div>
        <div class="advantage">
            <i class="bi bi-shield-lock-fill"></i>
            <h3>Sécurité</h3>
            <p>Vos trajets et informations sont sécurisés et fiables.</p>
        </div>
    </section>

    <!-- Image bas de page -->
    <img src="{{ asset('images/voiture_foret.jpg') }}" alt="Paysage" class="bottom-img">

    {% block javascripts %}
        <script src="{{ asset('/js/image.js') }}"></script>
    {% endblock %}

{% endblock %}
