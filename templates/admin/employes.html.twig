{% extends 'base.html.twig' %}

{% block title %}Gestion des employés{% endblock %}

{% block head %}
    <link rel="stylesheet" href="{{ asset('/css/admin/employe.css') }}">
{% endblock %}

{% block body %}
    <div class="container">
        <h1>Gestion des employés</h1>

        <table class="table-employes">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Prénom</th>
                    <th>Date de naissance (Âge)</th>
                    <th>Email</th>
                    <th>Téléphone</th>
                    <th>Adresse</th>
                    <th>Gérer</th>
                </tr>
            </thead>
            <tbody>
                {% for employe in employes %}
                    {% set naissance = employe.dateNaissance %}
                    {% set today = "now"|date("Y-m-d") %}
                    {% set age = (date(today).diff(naissance)).y %}
                    <tr>
                        <td>{{ employe.nom }}</td>
                        <td>{{ employe.prenom }}</td>
                        <td>{{ naissance|date('d/m/Y') }} ({{ age }} ans)</td>
                        <td>{{ employe.email }}</td>
                        <td>{{ employe.telephone }}</td>
                        <td>{{ employe.adresse }}</td>
                         <td>
                            <form method="post" action="{{ path('admin_supprimer_employe', {'id': employe.id}) }}" class="form-delete">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete-employe-' ~ employe.id) }}">
                                <button class="btn-delete" type="submit">Supprimer</button>
                            </form>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6" style="text-align:center;">Aucun employé trouvé.</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>


        <div class="actions">
            <a href="{{ path('admin_dashboard') }}" class="back-btn">⬅ Retour au dashboard</a>
            <a href="{{ path('admin_creer_employe') }}">Ajouter un employé</a>
        </div>
    </div>

    <div class="modal-confirm" style="display: none;"> <!-- Fenêtre pop-up de confirmation de suppression d'un employé -->
        <div class="modal-content">
            <p>Voulez-vous vraiment supprimer cet employé ? Cette action est irréversible.</p>
            <div class="modal-buttons">
            <button class="modal-confirm-yes">Oui</button>
            <button class="modal-confirm-no">Non</button>
            </div>
        </div>
    </div>

    <script src="{{ asset('js/confirm-delete.js') }}"></script>
{% endblock %}
