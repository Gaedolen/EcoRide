{% extends 'base.html.twig' %}

{% block title %}Gestion des utilisateurs{% endblock %}

{% block body %}
<h1>Liste des utilisateurs</h1>

<form method="get" action="{{ path('admin_utilisateurs') }}">
    <label for="filtre">Filtrer par rôle :</label>
    <select name="filtre" id="filtre" onchange="this.form.submit()">
        <option value="">-- Tous --</option>
        <option value="EMPLOYE" {{ filtre == 'EMPLOYE' ? 'selected' }}>Employés</option>
        <option value="USER" {{ filtre == 'USER' ? 'selected' }}>Utilisateurs</option>
    </select>
</form>

<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Email</th>
            <th>Pseudo</th>
            <th>Rôle</th>
            <th>Statut</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for user in utilisateurs %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.pseudo }}</td>
                <td>{{ user.role.libelle }}</td>
                <td>
                    {% if user.isSuspended %}
                        <span style="color: red;">Suspendu</span>
                    {% else %}
                        Actif
                    {% endif %}
                </td>
                <td>
                    <a href="{{ path('admin_suspendre_utilisateur', {id: user.id}) }}">
                        {% if user.isSuspended %}Réactiver{% else %}Suspendre{% endif %}
                    </a> |
                    <a href="{{ path('admin_supprimer_utilisateur', {id: user.id}) }}" onclick="return confirm('Supprimer cet utilisateur ?');">
                        Supprimer
                    </a>
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}
