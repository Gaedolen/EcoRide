        <h1>Mon profil</h1>
        <a href="{{ path('modifier_profil') }}" class="btn-modifier">Modifier le profil</a>
    </div>

    <div class="profil-container card">
        <div class="profil-main d-flex">
            <!-- Infos utilisateur -->
            <div class="infos-container">
                <p><span class="label">Pseudo :</span> {{ user.pseudo }}</p>
                <p><span class="label">Nom :</span> {{ user.nom }}</p>
                <p><span class="label">Pr√©nom :</span> {{ user.prenom }}</p>
                <p><span class="label">Email :</span> {{ user.email }}</p>
                <p><span class="label">Adresse :</span> {{ user.adresse }}</p>
                <p><span class="label">T√©l√©phone :</span> {{ user.telephone }}</p>
                <p><span class="label">Date de naissance :</span> {{ user.dateNaissance|date('d/m/Y') }}</p>
                <p><span class="label">Chauffeur :</span> {{ user.isChauffeur ? 'Oui' : 'Non' }}</p>
                <p><span class="label">Passager :</span> {{ user.isPassager ? 'Oui' : 'Non' }}</p>
            </div>
            <!-- Photo et cr√©dits -->
            <div class="photo-credit-container text-center">
                {% if photoBase64 %}
                    <img src="data:image/jpeg;base64,{{ photoBase64 }}" alt="Photo de profil" class="photo-profil mb-2">
                {% else %}
                    <img src="{{ asset('images/se-connecter.png') }}" alt="Photo de profil" class="photo-profil mb-2">
                {% endif %}
                <div class="credits">
                    <strong>Note :</strong>
