            {% endif %}
        </div>
    {% else %}
        <div class="car-section">
            <div class="voitures-header">
                <h1>Mes voitures</h1>
                <a href="#" class="btn-ajouter-voiture disabled" title="Vous devez √™tre indiqu√© comme chauffeur pour ajouter votre voiture" onclick="return false;">Ajouter une voiture</a>
            </div>
            <p class="message">Vous devez √™tre chauffeur pour ajouter une voiture. Veuillez modifier votre profil.</p>
        </div>
    {% endif %}

    <!-- Affichage des covoiturages -->
   {% if user.isChauffeur and covoiturages is not empty %}
        <div class="covoiturages-section">
            <div class="covoiturages-header">
                <h1>Mes covoiturages</h1>
                <a href="{{ path('ajouter_covoiturage') }}" 
                class="btn-covoiturage {% if app.user.credits < 2 %}disabled{% endif %}" 
                {% if app.user.credits < 2 %}data-tooltip="Il vous faut 2 cr√©dits pour cr√©er un covoiturage"{% endif %}>
                    Ajouter un covoiturage
                </a>
                <a href="{{ path('historique_covoiturages') }}" class="btn-historique">üìú Historique des covoiturages</a>
            </div>

            <div class="covoiturage-scroll-wrapper">
                <div class="covoiturage-container">
                    {% for covoiturage in covoiturages %}
                        <div class="covoiturage-card {% if covoiturage.statut == 'ferme' %}covoiturage-ferme{% endif %}">
                            <div class="covoiturage-header-actions">
                                <div class="covoiturage-header-left">
