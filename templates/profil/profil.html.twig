{% extends 'base.html.twig' %}

{% block title %}Mon profil{% endblock %}

{% block head %}
    <link rel="stylesheet" href="{{ asset('/css/profil.css') }}">
{% endblock %}

{% block body %}

    <!--Affichage du profil -->
    <div class="profil-header">
        <h1>Mon profil</h1>
        <a href="{{ path('modifier_profil') }}" class="btn-modifier">Modifier le profil</a>
    </div>

    <div class='profil-container'>
        <ul style="list-style-type:none;">
            <div class="noms-photo-container">
                <div class="noms-container">
                    <li><span class="label">Pseudo :</span> <span class="value">{{ user.pseudo }}</span></li>
                    <li><span class="label">Nom :</span> <span class="value">{{ user.nom }}</span></li>
                    <li><span class="label">Pr√©nom :</span> <span class="value">{{ user.prenom }}</span></li>
                </div>
                <div class="photo-container">
                    <li>
                        {% if photoBase64 %}
                            <img src="data:image/jpeg;base64,{{ photoBase64 }}" alt="Photo de profil" class="photo-profil">
                        {% else %}
                            <img src="{{ asset('images/se-connecter.png') }}" alt="Photo de profil" class="photo-profil">
                        {% endif %}
                    </li>  
                </div>
            </div>
            <li><span class="label">Email :</span> <span class="value">{{ user.email }}</span></li>
            <li><span class="label">Adresse :</span> <span class="value">{{ user.adresse }}</span></li>
            <li><span class="label">T√©l√©phone :</span> <span class="value">{{ user.telephone }}</span></li>
            <li><span class="label">Date de naissance :</span> <span class="value">{{ user.dateNaissance|date('d/m/Y') }}</span></li>
            <li><span class="label">Chauffeur :</span> <span class="value">{{ user.isChauffeur ? 'Oui' : 'Non' }}</span></li>
            <li><span class="label">Passager :</span> <span class="value">{{ user.isPassager ? 'Oui' : 'Non' }}</span></li>
           
        </ul>
    </div>
    

    <!-- Affichage des voitures -->
    {% if user.isChauffeur %}
        <div class="car-section">
            <div class="voitures-header">
                <h1>Mes voitures</h1>
                <a href="{{ path('ajouter_voiture') }}" class="btn-ajouter-voiture">Ajouter une voiture</a>
            </div>

            {% if voituresData is not empty %}
                <div class="car-scroll-wrapper">
                    <div class="car-container">
                        {% for form in voitureForms %}
                            {% set voiture = voituresData[loop.index0] %}
                            <div class="car-card">
                                <ul style="list-style-type:none;">
                                    <li><span class="label">Marque :</span> <span class="value">{{ voiture.marque }}</span></li>
                                    <li><span class="label">Mod√®le :</span> <span class="value">{{ voiture.modele }}</span></li>
                                    <li><span class="label">Immatriculation :</span> <span class="value">{{ voiture.immatriculation }}</span></li>
                                    <li><span class="label">Energie :</span> <span class="value">{{ voiture.energie }}</span></li>
                                    <li><span class="label">Date de premi√®re immatriculation :</span> <span class="value">{{ voiture.date_premiere_immatriculation|date('d/m/Y') }}</span></li>
                                    <li><span class="label">Places disponibles :</span> <span class="value">{{ voiture.nb_places }}</span></li>
                                    <li><span class="label">Fumeur :</span> <span class="value">{{ voiture.fumeur ? 'Oui' : 'Non' }}</span></li>
                                    <li><span class="label">Animaux :</span> <span class="value">{{ voiture.animaux ? 'Oui' : 'Non' }}</span></li>
                                </ul>
                                
                                <div class="card-actions">
                                    <a href="{{ path('modifier_voiture', { id: voiture.id }) }}" class="btn-card-action">Modifier</a>
                                    <form method="POST" action="{{ path('supprimer_voiture', { id: voiture.id }) }}" class="delete-form">
                                        <button type="button" class="btn-card-action" data-voiture-id="{{ voiture.id }}">Supprimer</button>
                                    </form>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            {% else %}
                <p class="no-car-message">Vous n'avez pas encore ajout√© de voiture.</p>
            {% endif %}
        </div>
    {% else %}
        <div class="car-section">
            <div class="voitures-header">
                <h1>Mes voitures</h1>
                <a href="#" class="btn-ajouter-voiture disabled" title="Vous devez √™tre indiqu√© comme chauffeur pour ajouter votre voiture" onclick="return false;">Ajouter une voiture</a>
            </div>
            <p class="message">Vous devez √™tre chauffeur pour ajouter une voiture. Veuillez modifier votre profil.</p>
        </div>
    {% endif %}

    <!-- Affichage des covoiturages -->
   {% if user.isChauffeur and covoiturages is not empty %}
        <div class="covoiturages-section">
            <div class="covoiturages-header">
                <h1>Mes covoiturages</h1>
                <a href="{{ path('ajouter_covoiturage') }}" class="btn-covoiturage">Ajouter un covoiturage</a>
            </div>

            <div class="covoiturage-scroll-wrapper">
                <div class="covoiturage-container">
                    {% for covoiturage in covoiturages %}
                        <div class="covoiturage-card {% if covoiturage.statut == 'ferme' %}covoiturage-ferme{% endif %}">
                            <div class="covoiturage-header-actions">
                                <div class="covoiturage-header-left">
                                    <h2 class="titre-covoiturage">Trajet vers {{ covoiturage.lieu_arrivee }} le {{ covoiturage.date_depart|date('d/m/Y') }}</h2>
                                </div>

                                <!-- Gestion du bouton "D√©marrer" et "Arriv√© √† destination" en fonction du statut du trajet -->
                                {% if covoiturage.statut == 'ouvert' or covoiturage.statut == 'complet' %}
                                    <form method="post" action="{{ path('chauffeur_covoiturage_demarrer', { id: covoiturage.id }) }}">
                                        <button type="submit" class="btn-card-action">D√©marrer</button>
                                    </form>
                                {% elseif covoiturage.statut == 'en_cours' %}
                                    <form method="post" action="{{ path('chauffeur_covoiturage_clore', { id: covoiturage.id }) }}">
                                        <button type="submit" class="btn-card-action">Arriv√© √† destination</button>
                                    </form>
                                {% endif %}
                            </div>

                            <ul>
                                <li><span class="label">Lieu de d√©part :</span> <span class="value">{{ covoiturage.lieu_depart }}</span></li>
                                <li><span class="label">Date et heure de d√©part :</span> <span class="value">Le {{ covoiturage.date_depart|date('d/m/Y') }} √† {{ covoiturage.heure_depart|date('H:i') }}</span></li>
                                <li><span class="label">Lieu d'arriv√©e :</span> <span class="value">{{ covoiturage.lieu_arrivee }}</span></li>
                                <li><span class="label">Date et heure d'arriv√©e :</span> <span class="value">Le {{ covoiturage.date_arrivee|date('d/m/Y') }} √† {{ covoiturage.heure_arrivee|date('H:i') }}</span></li>
                                <li><span class="label">Nombre de places :</span> <span class="value">{{ covoiturage.nb_place }}</span></li>
                                <li><span class="label">Prix par personne :</span> <span class="value">{{ covoiturage.prix_personne }} ‚Ç¨</span></li>
                                <li><span class="label">Statut :</span> <span class="value">{{ covoiturage.statut | statut_label }}</span></li>
                            </ul>

                            <div class="card-actions">
                                <a href="{{ path('modifier_covoiturage', { id: covoiturage.id }) }}" class="btn-card-action">Modifier</a>
                                <form method="POST" action="{{ path('supprimer_covoiturage', { id: covoiturage.id }) }}" class="delete-form">
                                    <button type="button" class="btn-card-action" data-covoiturage-id="{{ covoiturage.id }}">Supprimer</button>
                                </form>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    {% elseif user.isChauffeur %}
        <div class="covoiturages-section">
            <div class="covoiturages-header">
                <h1>Mes covoiturages</h1>
                <a href="{{ path('ajouter_covoiturage') }}" class="btn-covoiturage">Ajouter un covoiturage</a>
            </div>
            <p class="no-car-message">Vous n'avez pas encore ajout√© de covoiturage.</p>
        </div>
    {% endif %}

    <!-- Affichage des r√©servations -->
   <h1 class="h1">Mes r√©servations</h1>
    {% if reservations is not empty %}
        <div class="reservations-section">
            {% for resa in reservations %}
                <div class="details-card {% if resa.statut == 'ferme' %}past-reservation{% endif %}">
                    <div class="details-card-header">
                        <div class="details-title">
                            <h2>Trajet du {{ resa.date_depart|date('d/m/Y') }} vers {{ resa.lieu_arrivee }}
                                {% if resa.statut == 'ferme' %}
                                    <span class="past-label">(ferm√©)</span>
                                {% endif %}
                            </h2>
                        </div>

                        {% if resa.statut != 'ferme' %}
                            <form method="POST">
                                <button type="button" class="btn-annuler open-cancel-popup" data-reservation-id="{{ resa.reservation_id }}" data-action-url="{{ path('annuler_reservation', { id: resa.reservation_id }) }}">Annuler</button>
                            </form>
                        {% else %}
                            {% set avis = resa.avis_existant %}
                            {% if avis %}
                                {% if avis.is_validated %}
                                    <span class="badge badge-success">‚úÖ Avis d√©pos√©</span>
                                {% else %}
                                    <span class="badge badge-warning">‚è≥ Avis en attente</span>
                                {% endif %}
                            {% else %}
                                <button type="button" class="btn btn-avis open-avis-popup" data-avis-covoiturage-id="{{ resa.covoiturage_id }}" data-cible-id="{{ resa.chauffeur_id }}">Laisser un avis</button>
                            {% endif %}
                        {% endif %}
                    </div>

                    <div class="grayscale-wrapper">
                        <div class="details-content">
                            <!-- Bloc conducteur -->
                            <div class="bloc bloc-conducteur">
                                <h3>Conducteur</h3>
                                <img src="{{ resa.chauffeur_photo ? 'data:image/jpeg;base64,' ~ resa.chauffeur_photo : asset('images/default-user.png') }}" alt="Photo" class="chauffeur-photo">
                                <p><strong>{{ resa.chauffeur_pseudo }}</strong></p>
                                <p><strong>Note : </strong>{{ resa.chauffeur_note ?? 'Non not√©' }}/5</p>
                            </div>

                            <!-- Ligne verticale -->
                            <div class="separator-vertical"></div>

                            <!-- Bloc trajet -->
                            <div class="bloc bloc-trajet">
                                <h3>Trajet</h3>
                                <p><strong>D√©part :</strong> {{ resa.lieu_depart }}, {{ resa.date_depart|date('d/m/Y') }} √† {{ resa.heure_depart|date('H:i') }}</p>
                                <p><strong>Arriv√©e :</strong> {{ resa.lieu_arrivee }}, {{ resa.date_arrivee|date('d/m/Y') }} √† {{ resa.heure_arrivee|date('H:i') }}</p>
                                <p><strong>Prix :</strong> {{ resa.prix_personne|number_format(2, ',', ' ') }} ‚Ç¨</p>
                                {% set duree = resa.heure_arrivee.timestamp - resa.heure_depart.timestamp %}
                                {% set h = duree // 3600 %}
                                {% set m = (duree % 3600) // 60 %}
                                <p><strong>Dur√©e :</strong> {{ h }}h{% if m > 0 %}{{ m }}min{% endif %}</p>

                                {% if resa.voiture_energie in ['√âlectrique', 'Electrique'] %}
                                    <span class="eco-badge">üå± √âcologique</span>
                                {% endif %}
                            </div>

                            <!-- Ligne verticale -->
                            <div class="separator-vertical"></div>

                            <!-- Bloc voiture -->
                            <div class="bloc bloc-voiture">
                                <h3>V√©hicule</h3>
                                <p><strong>Marque :</strong> {{ resa.marque }}</p>
                                <p><strong>Mod√®le :</strong> {{ resa.modele }}</p>
                                <p><strong>Couleur :</strong> {{ resa.couleur }}</p>
                                <p><strong>√ânergie :</strong> {{ resa.voiture_energie }}</p>
                                <p><strong>Places :</strong> {{ resa.nb_places }}</p>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <p class="no-car-message">Vous n'avez pas encore r√©serv√© de covoiturage.</p>
    {% endif %}

    <h1 class="h1">Mes avis</h1>
    {% if avisValides is not empty %}
        {% for avis in avisValides %}
            <div class="avis-item">
                {% if avis.auteur and avis.auteur.auteurPhotoBase64 %}
                    <img src="data:image/jpeg;base64,{{ avis.auteur.auteurPhotoBase64 }}" alt="Photo de {{ avis.auteur.pseudo }}" class='avis-photo'>
                {% else %}
                    <img src="/images/default-avatar.png" alt="Photo par d√©faut" class='avis-photo'>
                {% endif %}

                <span class="separator-vertical"></span>
                
                <div class="avis-info">
                    <div class="avis-pseudo-date">
                        <div class="avis-pseudo">{{ avis.auteur.pseudo }}</div>
                        <div class="avis-date">{{ avis.dateAvis|date('d/m/Y') }}</div>
                    </div>
                    <div class="avis-commentaire">{{ avis.commentaire }}</div>
                </div>
                
                <span class="separator-vertical"></span>
                <div class="avis-note">{{ avis.note }}/5</div>
            </div>
        {% endfor %}
    {% else %}
        <p class="message">Aucun avis re√ßu pour le moment.</p>
    {% endif %}

    <div id="confirmation-modal" class="modal hidden"> <!-- Fen√™tre pop-up de suppression d'une voiture -->
        <div class="modal-content">
            <p>√ätes-vous s√ªr de vouloir supprimer cette voiture ?</p>
            <div class="modal-buttons">
                <button id="confirm-yes" class="btn-confirm-yes">Oui</button>
                <button id="confirm-no" class="btn-confirm-no">Non</button>
            </div>
        </div>
    </div>

    <div id="confirmation-modal-covoiturage" class="modal hidden"> <!-- Fen√™tre pop-up de suppression d'un covoiturage -->
        <div class="modal-content">
            <p>√ätes-vous s√ªr de vouloir supprimer ce covoiturage ? Vous risquez de mettre vos passagers dans l'embarras.</p>
            <div class="modal-buttons">
                <button id="confirm-yes-covoiturage" class="btn-confirm-yes">Oui</button>
                <button id="confirm-no-covoiturage" class="btn-confirm-no">Non</button>
            </div>
        </div>
    </div>

    <div id="cancel-reservation-modal" class="modal hidden"> <!-- Fen√™tre pop-up de suppression d'une r√©servation -->
        <div class="modal-content">
            <p>√ätes-vous s√ªr de vouloir annuler cette r√©servation ?</p>
            <form id="cancel-reservation-form" method="POST">
                <div class="modal-buttons">
                    <button type="submit" class="btn-confirm-yes">Oui</button>
                    <button type="button" class="btn-confirm-no">Non</button>
                </div>
            </form>
        </div>
    </div>

    <div id="avis-popup" class="popup-overlay" style="display:none;">
        <div class="popup-content">
            <button class="close-popup" aria-label="Fermer">&times;</button>

            <form method="POST" action="{{ path('laisser_avis') }}">
                <input type="hidden" name="cible_id" id="cible_id" value="">
                <input type="hidden" name="covoiturage_id" id="covoiturage_id" value="">

                <label for="note">Note (1 √† 5) :</label>
                <select name="note" id="note" required>
                    <option value="">-- Choisir --</option>
                    {% for i in 1..5 %}
                        <option value="{{ i }}">{{ i }}</option>
                    {% endfor %}
                </select>

                <label for="commentaire">Commentaire :</label>
                <textarea name="commentaire" id="commentaire" rows="4" required></textarea>

                <button type="submit" class="btn btn-primary">Envoyer</button>
            </form>
        </div>
    </div>

    <script src="{{ asset('js/delete-voiture.js') }}"></script>
{% endblock %}